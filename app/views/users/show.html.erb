<div class="content">
  <img class="profile-pic" src="http://www.du.edu/ahss/psychology/fcnlab/media/images/homer.png"><br>
  <hr>
    <h3><%= @user.name.capitalize %> - <a href="mailto:<%= @user.email %>"><%= @user.email %></a></h3>

  <div class="right">
    <% if can? :edit, @user %>
      <%= link_to 'Edit', edit_user_path(@user) %>
    <% end %>
    <% if can? :destroy, @user %>
      <%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>

</div>


<%= render :partial => 'messages/list' %>


